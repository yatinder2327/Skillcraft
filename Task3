import re

def assess_password_strength(password):
    """
    Assesses the strength of a password based on a scoring system.
    Returns a strength rating and a list of feedback.
    """
    score = 0
    feedback = []

    # Criteria 1: Length
    if len(password) >= 12:
        score += 3
    elif len(password) >= 8:
        score += 2
    else:
        feedback.append("Password must be at least 8 characters long.")
    
    # Criteria 2: Uppercase letters
    if re.search(r'[A-Z]', password):
        score += 1
    else:
        feedback.append("Password needs at least one uppercase letter.")
        
    # Criteria 3: Lowercase letters
    if re.search(r'[a-z]', password):
        score += 1
    else:
        feedback.append("Password needs at least one lowercase letter.")
        
    # Criteria 4: Numbers
    if re.search(r'[0-9]', password):
        score += 1
    else:
        feedback.append("Password needs at least one number.")
        
    # Criteria 5: Special characters
    special_chars = r'[!@#$%^&*(),.?":{}|<>]'
    if re.search(special_chars, password):
        score += 1
    else:
        feedback.append("Password needs at least one special character.")

    # Determine strength rating based on final score
    if score >= 6:
        strength = "Strong ðŸ’ª"
    elif score >= 4:
        strength = "Medium ðŸŸ¡"
    else:
        strength = "Weak ðŸ”´"

    return strength, feedback

# --- Example Usage ---
if __name__ == "__main__":
    user_password = input("Enter a password to check its strength: ")
    strength_rating, feedback_list = assess_password_strength(user_password)
    
    print(f"\nPassword Strength: {strength_rating}")
    
    if feedback_list:
        print("To make your password stronger, consider the following:")
        for item in feedback_list:
            print(f"- {item}")
    else:
        print("This password meets all the basic strength criteria.")
